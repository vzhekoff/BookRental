@model BookRental.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h3>Profile Details</h3>

<div>
    <hr />

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2">

            </div>

            <div class="col-md-10">
                @if (Model.HasPassword)
                {
                    <a type="button" class="btn btn-sm btn-primary" href="@Url.Action("ChangePassword")">
                        <span class="glyphicon glyphicon-pencil"></span>
                        <span>Change Password</span>
                    </a>
                }
                else
                {
                    <a type="button" class="btn btn-sm btn-primary" href="@Url.Action("SetPassword")">
                        <span class="glyphicon glyphicon-pencil"></span>
                        <span>Create Password</span>
                    </a>
                }

                &nbsp;&nbsp;

                <a type="button" class="btn btn-sm btn-primary" href="@Url.Action("ManageLogins")">
                    <span class="glyphicon glyphicon-pencil"></span>
                    <span>Manage External Logins</span>
                </a>

            </div>
        </div>

        <br />
        <br />

        <fieldset disabled>
            <div class="form-group">
                @Html.LabelFor(m => m.FName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.FName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.LName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EMail, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.EMail, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BDay, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.BDay, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MembershipTypeId, "MembershipTypeId", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.MembershipTypeId,
                   new SelectList(Model.MembershipTypes, "Id", "Name"),
                   new { @class = "form-control" })
                </div>
            </div>
        </fieldset>

        <br />

        <div class="col-md-offset-2">
            <a type="button"
               style="min-width:8em"
               class="btn btn-success btn-sm"
               href="@Url.Action("Edit", "Manage")">
                <span class="glyphicon glyphicon-pencil"></span>
                <span>Edit</span>
            </a>
        </div>
    </div>

</div>

