@model BookRental.ViewModels.ThumbnailBoxViewModel

<div class="row">
    @if (null != Model.Thumbnails)
    {
        foreach (var thumbnail in Model.Thumbnails)
        {
            <div class="col-xs-6 col-md-3">
                <div class="thumbnail">
                    <div class="thumbnail-img-container">
                        <a href="@thumbnail.Link">
                            <img class="thumbnail-img" alt="" src="@thumbnail.ImageUrl" style="width:100%; height:auto" />
                        </a>
                    </div>


                    <div class="caption">
                        <h3><a href="@thumbnail.Link">@thumbnail.Title</a> </h3>
                        <p>@Html.Raw(thumbnail.Description)</p>
                    </div>
                </div>
            </div>
        }
    }
</div>
